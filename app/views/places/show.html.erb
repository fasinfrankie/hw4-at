<h1 class="row gy-3">This is the <%= @place.name %> page</h1>

  <a href="/posts/new?place_id=<%= @place.id %>" class="btn btn-success col-2 row gy-2 gx-1">Create New Post</a>

<% if @current_user %>
<h5 class="row gy-5 gx-5">Here are the existing posts from <%= @place.name %>:</h5>

<div class="row mb-2">
<% for post in @place.posts.where({ user_id: @current_user.id}) %>
 
  <p class="display-6 row gx-1"><%= post.title %></p>
  <p class="h6 gx-3"><%= post.posted_on %></p>
    </div>

<div class="col-md-3 col-sm-6 row gx-1">  
      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
        <img src="<%= post.image %>" class="img-fluid">
      <% end %>
    <p><%= post.description %></p>
    

<% end %>

<% else %>
Login to see your posts.

<% end %>

<p>
  <a href="/places">Back to All Places</a>
</p>